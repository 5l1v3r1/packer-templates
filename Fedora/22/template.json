{
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "36864",
    "hard_drive_interface": "sata",
    "headless": "true",
    "memory": "512",
    "mirror": "http://download.fedoraproject.org/pub/fedora/linux"
  },
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/virtualbox.sh",
        "scripts/vagrant.sh",
        "scripts/sshd.sh",
        "scripts/locale.sh",
        "scripts/cleanup.sh",
        "scripts/minimize.sh"
      ]
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Fedora_64",
      "iso_url": "{{user `mirror`}}/releases/22/Server/x86_64/iso/Fedora-Server-netinst-x86_64-22.iso",
      "iso_checksum": "9f1f2f19f75cc3b97da41878b5c86188fa8d27ed446bd97d9df615c137c77cfc",
      "iso_checksum_type": "sha256",
      "output_directory": "output-fedora-22-x86_64",
      "vm_name": "packer-fedora-22-x86-64",
      "disk_size": "{{user `disk_size`}}",
      "hard_drive_interface": "{{user `hard_drive_interface`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<tab> ",
        "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "<enter>"
      ],
      "ssh_wait_timeout": "60m",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "sudo systemctl poweroff",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": "{{user `compression_level`}}",
      "output": "fedora-22-x86_64.box"
    },
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ]
}
