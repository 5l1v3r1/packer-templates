{
  "variables": {
    "compression_level": "6",
    "disk_size": "36864",
    "guest_os_type": "RedHat_64",
    "hard_drive_interface": "sata",
    "iso_checksum": "714acc0aefb32b7d51b515e25546835e55a90da9fb00417fbee2d03a62801efd",
    "iso_checksum_type": "sha256",
    "iso_url": "http://centos.mirror.constant.com/7.5.1804/isos/x86_64/CentOS-7-x86_64-Minimal-1804.iso",
    "vm_name": "packer-centos-7-server-x86-64",
    "output": "centos-7-server-x86_64.box"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos_ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "{{user `guest_os_type`}}",
      "hard_drive_interface": "{{user `hard_drive_interface`}}",
      "headless": true,
      "http_directory": "http",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant'|sudo -S bash 'shutdown.sh'",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_pty": true,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `vm_name`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/virtualbox.sh",
        "scripts/vagrant.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": "{{user `compression_level`}}",
        "output": "{{user `output`}}"
      },
      {
        "type": "manifest",
        "output": "manifest.json",
        "strip_path": true
      }
    ]
  ]
}
